<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.valerie.wx.miniapp.mapper.MenuRoleMapper">

    <resultMap type="com.github.valerie.wx.miniapp.model.MenuRole" id="MenuRoleMap">
        <result property="id" column="ID" jdbcType="INTEGER"/>
        <result property="menuId" column="Menu_ID" jdbcType="INTEGER"/>
        <result property="roleId" column="Role_ID" jdbcType="INTEGER"/>
    </resultMap>
    
    <sql id="Base_Column_List" >
        ID, Menu_ID, Role_ID    
    </sql>

    <delete id="deleteByRoleId">
        delete from menu_role where Role_ID = #{roleId}
    </delete>

    <insert id="addMenuRole">
        insert into menu_role (Menu_ID, Role_ID) VALUES
        <foreach collection="menuList" item="menuId" separator=",">
            (#{menuId}, #{roleId})
        </foreach>
    </insert>

    <!--查询单个-->
    <select id="selectById" resultMap="MenuRoleMap">
        select
        <include refid="Base_Column_List" />
        from menu_role
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="selectAllPaging" resultMap="MenuRoleMap">
        select
        <include refid="Base_Column_List" />
        from menu_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="selectAll" resultMap="MenuRoleMap">
        select
        <include refid="Base_Column_List" />
        from menu_role
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="menuId != null">
                and Menu_ID = #{menuId}
            </if>
            <if test="roleId != null">
                and Role_ID = #{roleId}
            </if>
        </where>
    </select>
    
    <!--通过Map作为筛选条件查询-->
    <select id="select" resultMap="MenuRoleMap">
        select
        <include refid="Base_Column_List" />
        from menu_role
        <include refid="selectCondition" />
        <if test="page != null and limit != null">
            limit #{page}, #{limit}
        </if>
    </select>
    
    <select id="count" resultType="java.lang.Integer">
        select Count(*)
        from menu_role
        <include refid="selectCondition" />
    </select>
    
    <sql id="selectCondition">
        <where>
             <if test="id != null">
                and ID = #{id}
            </if>
            <if test="menuId != null">
                and Menu_ID = #{menuId}
            </if>
            <if test="roleId != null">
                and Role_ID = #{roleId}
            </if>
        </where>
    </sql>

    <!--新增所有列-->
    <insert id="add" keyProperty="id" useGeneratedKeys="true">
        insert into menu_role        
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="menuId != null">
                Menu_ID,
            </if>
            <if test="roleId != null">
                Role_ID,
            </if>
        </trim>
        values        
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="menuId != null">
                #{menuId},
            </if>
            <if test="roleId != null">
                #{roleId},
            </if>
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update menu_role
        <set>
            <if test="menuId != null">
                Menu_ID = #{menuId},
            </if>
            <if test="roleId != null">
                Role_ID = #{roleId},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from menu_role where ID = #{id}
    </delete>

</mapper>
