<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.valerie.wx.miniapp.mapper.RoleMapper">

    <resultMap type="com.github.valerie.wx.miniapp.model.Role" id="RoleMap">
        <result property="id" column="ID" jdbcType="BIGINT"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="namezh" column="nameZh" jdbcType="VARCHAR"/>
        <result property="status" column="Status" jdbcType="INTEGER"/>
        <result property="note" column="Note" jdbcType="VARCHAR"/>
        <result property="tempA" column="temp_a" jdbcType="VARCHAR"/>
        <result property="tempB" column="temp_b" jdbcType="VARCHAR"/>
    </resultMap>
    
    <sql id="Base_Column_List" >
        ID, name, nameZh, Status, Note, Creat_Time, Update_Time, temp_a, temp_b    
    </sql>

    <select id="getUserRolesById" resultMap="RoleMap">
        select role.*
        from role left join user_role on role.ID = user_role.Role_ID and user_role.User_ID = #{id} and role.Status = 0
    </select>

    <!--查询单个-->
    <select id="selectById" resultMap="RoleMap">
        select
        <include refid="Base_Column_List" />
        from role
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="selectAllPaging" resultMap="RoleMap">
        select
        <include refid="Base_Column_List" />
        from role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="selectAll" resultMap="RoleMap">
        select
        <include refid="Base_Column_List" />
        from role
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="namezh != null and namezh != ''">
                and nameZh = #{namezh}
            </if>
            <if test="status != null">
                and Status = #{status}
            </if>
            <if test="note != null and note != ''">
                and Note = #{note}
            </if>
            <if test="tempA != null and tempA != ''">
                and temp_a = #{tempA}
            </if>
            <if test="tempB != null and tempB != ''">
                and temp_b = #{tempB}
            </if>
        </where>
    </select>
    
    <!--通过Map作为筛选条件查询-->
    <select id="select" resultMap="RoleMap">
        select
        <include refid="Base_Column_List" />
        from role
        <include refid="selectCondition" />
        <if test="page != null and limit != null">
            limit #{page}, #{limit}
        </if>
    </select>

    <select id="count" resultType="java.lang.Integer">
        select count(*)
        from role
        <include refid="selectCondition" />
    </select>

    <sql id="selectCondition">
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="name != null and name != ''">
                and name like CONCAT('%', #{name}, '%')
            </if>
            <if test="namezh != null and namezh != ''">
                and nameZh like CONCAT('%', #{namezh}, '%')
            </if>
            <if test="status != null">
                and Status = #{status}
            </if>
            <if test="note != null and note != ''">
                and Note = #{note}
            </if>
            <if test="tempA != null and tempA != ''">
                and temp_a = #{tempA}
            </if>
            <if test="tempB != null and tempB != ''">
                and temp_b = #{tempB}
            </if>
        </where>
    </sql>

    <!--新增所有列-->
    <insert id="add" keyProperty="id" useGeneratedKeys="true">
        insert into role        
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null">
                ID,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="namezh != null">
                nameZh,
            </if>
            <if test="status != null">
                Status,
            </if>
            <if test="note != null">
                Note,
            </if>
            <if test="tempA != null">
                temp_a,
            </if>
            <if test="tempB != null">
                temp_b,
            </if>
        </trim>
        values        
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="namezh != null">
                #{namezh},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="note != null">
                #{note},
            </if>
            <if test="tempA != null">
                #{tempA},
            </if>
            <if test="tempB != null">
                #{tempB},
            </if>
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update role
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="namezh != null and namezh != ''">
                nameZh = #{namezh},
            </if>
            <if test="status != null">
                Status = #{status},
            </if>
            <if test="note != null and note != ''">
                Note = #{note},
            </if>
            <if test="tempA != null and tempA != ''">
                temp_a = #{tempA},
            </if>
            <if test="tempB != null and tempB != ''">
                temp_b = #{tempB},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from role where ID = #{id}
    </delete>

</mapper>
