            <if test="password != null and password != ''">
                and Password = #{password}
            </if>
            <if test="roleId != null">
                and Role_ID = #{roleId}
            </if>
            <if test="openId != null and openId != ''">
                and Open_ID = #{openId}
            </if>
            <if test="dutyId != null">
                and Duty_ID = #{dutyId}
            </if>
            <if test="depId != null">
                and Dep_ID = #{depId}
            </if>
            <if test="remark != null and remark != ''">
                and Remark = #{remark}
            </if>
            <if test="status != null">
                and Status = #{status}
            </if>
            <if test="note != null and note != ''">
                and Note = #{note}
            </if>
            <if test="creatTime != null">
                and Creat_Time = #{creatTime}
            </if>
            <if test="updateTime != null">
                and Update_Time = #{updateTime}
            </if>
            <if test="tempA != null and tempA != ''">
                and temp_a = #{tempA}
            </if>
            <if test="tempB != null and tempB != ''">
                and temp_b = #{tempB}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="name != null">
                Name,
            </if>
            <if test="phone != null">
                Phone,
            </if>
            <if test="password != null">
                Password,
            </if>
            <if test="roleId != null">
                Role_ID,
            </if>
            <if test="openId != null">
                Open_ID,
            </if>
            <if test="dutyId != null">
                Duty_ID,
            </if>
            <if test="depId != null">
                Dep_ID,
            </if>
            <if test="remark != null">
                Remark,
            </if>
            <if test="status != null">
                Status,
            </if>
            <if test="note != null">
                Note,
            </if>
            <if test="creatTime != null">
                Creat_Time,
            </if>
            <if test="updateTime != null">
                Update_Time,
            </if>
            <if test="tempA != null">
                temp_a,
            </if>
            <if test="tempB != null">
                temp_b,
            </if>
        </trim>
        values        
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="name != null">
                #{name},
            </if>
            <if test="phone != null">
                #{phone},
