                #{remark},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="note != null">
                #{note},
            </if>
            <if test="creatTime != null">
                #{creatTime},
            </if>
            <if test="updateTime != null">
                #{updateTime},
            </if>
            <if test="tempA != null">
                #{tempA},
            </if>
            <if test="tempB != null">
                #{tempB},
            </if>
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user
        <set>
            <if test="name != null and name != ''">
                Name = #{name},
            </if>
            <if test="phone != null and phone != ''">
                Phone = #{phone},
            </if>
            <if test="password != null and password != ''">
                Password = #{password},
            </if>
            <if test="roleId != null">
                Role_ID = #{roleId},
            </if>
            <if test="openId != null and openId != ''">
                Open_ID = #{openId},
            </if>
            <if test="dutyId != null">
                Duty_ID = #{dutyId},
            </if>
            <if test="depId != null">
                Dep_ID = #{depId},
            </if>
            <if test="remark != null and remark != ''">
                Remark = #{remark},
            </if>
            <if test="status != null">
                Status = #{status},
            </if>
            <if test="note != null and note != ''">
                Note = #{note},
            </if>
            <if test="creatTime != null">
                Creat_Time = #{creatTime},
            </if>
            <if test="updateTime != null">
                Update_Time = #{updateTime},
            </if>
            <if test="tempA != null and tempA != ''">
                temp_a = #{tempA},
            </if>
            <if test="tempB != null and tempB != ''">
                temp_b = #{tempB},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from user where ID = #{id}
    </delete>

</mapper>
