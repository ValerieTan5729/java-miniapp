<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.valerie.wx.miniapp.mapper.UserMapper">

    <resultMap type="com.github.valerie.wx.miniapp.model.User" id="UserMap">
        <result property="id" column="ID" jdbcType="BIGINT"/>
        <result property="name" column="Name" jdbcType="VARCHAR"/>
        <result property="phone" column="Phone" jdbcType="VARCHAR"/>
        <result property="password" column="Password" jdbcType="VARCHAR"/>
        <result property="openId" column="Open_ID" jdbcType="VARCHAR"/>
        <result property="dutyLevelId" column="Duty_Level_ID" jdbcType="INTEGER"/>
        <result property="depId" column="Dep_ID" jdbcType="INTEGER"/>
        <result property="depName" column="Dep_Name" jdbcType="VARCHAR"/>
        <result property="remark" column="Remark" jdbcType="VARCHAR"/>
        <result property="status" column="Status" jdbcType="INTEGER"/>
        <result property="note" column="Note" jdbcType="VARCHAR"/>
        <result property="tempA" column="temp_a" jdbcType="VARCHAR"/>
        <result property="tempB" column="temp_b" jdbcType="VARCHAR"/>
    </resultMap>

    <resultMap id="UserWithRoles" type="com.github.valerie.wx.miniapp.model.User" extends="UserMap">
        <collection property="roles" ofType="com.github.valerie.wx.miniapp.model.Role">
            <id column="rid" property="id"/>
            <result column="rname" property="name"/>
            <result column="rnameZh" property="namezh"/>
        </collection>
    </resultMap>
    
    <sql id="Base_Column_List" >
        user.ID, user.Name, user.Phone, user.Password, user.Open_ID, user.Duty_Level_ID, user.Dep_ID, user.Remark, user.Status, user.Note, user.temp_a, user.temp_b
    </sql>

    <select id="loadUserByPhone" resultMap="UserWithRoles">
        select user.*, role.ID as rid, role.name as rname, role.nameZh as rnamezh
        from user join user_role on user_role.User_ID = user.ID
                  join role on role.ID = user_role.Role_ID
        where user.Phone = #{phone}
    </select>

    <!--查询单个-->
    <select id="selectById" resultMap="UserMap">
        select
        <include refid="Base_Column_List" />, department.Name as Dep_Name
        from user
             left join department on department.ID = user.Dep_ID
        where user.ID = #{id}
    </select>

    <select id="selectIdWithRole" resultMap="UserWithRoles">
        select user.*, role.ID as rid, role.name as rname, role.nameZh as rnamezh, department.Name as Dep_Name
        from user join user_role on user_role.User_ID = user.ID
                  join role on role.ID = user_role.Role_ID
                  left join department on department.ID = user.Dep_ID
        where user.ID = #{id}
    </select>

    <select id="getUserRolesById" resultType="com.github.valerie.wx.miniapp.model.Role">
        select role.*
        from role left join user_role on role.ID = user_role.Role_ID and user_role.User_ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="selectAllPaging" resultMap="UserMap">
        select
        <include refid="Base_Column_List" />, department.Name as Dep_Name
        from user
             left join department on department.ID = user.Dep_ID
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="selectAll" resultMap="UserMap">
        select
        <include refid="Base_Column_List" />, department.Name as Dep_Name
        from user left join department on department.ID = user.Dep_ID
        <where>
            <if test="id != null">
                and user.ID = #{id}
            </if>
            <if test="name != null and name != ''">
                and user.Name = #{name}
            </if>
            <if test="phone != null and phone != ''">
                and user.Phone = #{phone}
            </if>
            <if test="password != null and password != ''">
                and user.Password = #{password}
            </if>
            <if test="openId != null and openId != ''">
                and user.Open_ID = #{openId}
            </if>
            <if test="dutyLevelId != null">
                and user.Duty_Level_ID = #{dutyLevelId}
            </if>
            <if test="depId != null">
                and user.Dep_ID = #{depId}
            </if>
            <if test="remark != null and remark != ''">
                and user.Remark = #{remark}
            </if>
            <if test="status != null">
                and user.Status = #{status}
            </if>
            <if test="note != null and note != ''">
                and user.Note = #{note}
            </if>
            <if test="tempA != null and tempA != ''">
                and user.temp_a = #{tempA}
            </if>
            <if test="tempB != null and tempB != ''">
                and user.temp_b = #{tempB}
            </if>
        </where>
    </select>
    
    <!--通过Map作为筛选条件查询-->
    <select id="select" resultMap="UserMap">
        select
        <include refid="Base_Column_List" />, department.Name as Dep_Name
        from user left join department on department.ID = user.Dep_ID
        <where>
            <if test="name != null and name != ''">
                and user.Name like CONCAT('%', #{name}, '%')
            </if>
            <if test="phone != null and phone != ''">
                and user.Phone = #{phone}
            </if>
            <if test="password != null and password != ''">
                and user.Password = #{password}
            </if>
            <if test="openId != null and openId != ''">
                and user.Open_ID = #{openId}
            </if>
            <if test="dutyLevelId != null">
                and user.Duty_Level_ID = #{dutyLevelId}
            </if>
            <if test="depId != null">
                and user.Dep_ID = #{depId}
            </if>
            <if test="remark != null and remark != ''">
                and user.Remark = #{remark}
            </if>
            <if test="status != null">
                and user.Status = #{status}
            </if>
            <if test="note != null and note != ''">
                and user.Note = #{note}
            </if>
            <if test="tempA != null and tempA != ''">
                and user.temp_a = #{tempA}
            </if>
            <if test="tempB != null and tempB != ''">
                and user.temp_b = #{tempB}
            </if>
        </where>
        <if test="page != null and limit != null">
            limit #{page}, #{limit}
        </if>
    </select>

    <!--新增所有列-->
    <insert id="add" keyProperty="id" useGeneratedKeys="true">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null">
                ID,
            </if>
            <if test="name != null">
                Name,
            </if>
            <if test="phone != null">
                Phone,
            </if>
            <if test="password != null">
                Password,
            </if>
            <if test="openId != null">
                Open_ID,
            </if>
            <if test="dutyLevelId != null">
                Duty_Level_ID,
            </if>
            <if test="depId != null">
                Dep_ID,
            </if>
            <if test="remark != null">
                Remark,
            </if>
            <if test="status != null">
                Status,
            </if>
            <if test="note != null">
                Note,
            </if>
            <if test="tempA != null">
                temp_a,
            </if>
            <if test="tempB != null">
                temp_b,
            </if>
        </trim>
        values        
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="phone != null">
                #{phone},
            </if>
            <if test="password != null">
                #{password},
            </if>
            <if test="openId != null">
                #{openId},
            </if>
            <if test="dutyLevelId != null">
                #{dutyLevelId},
            </if>
            <if test="depId != null">
                #{depId},
            </if>
            <if test="remark != null">
                #{remark},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="note != null">
                #{note},
            </if>
            <if test="tempA != null">
                #{tempA},
            </if>
            <if test="tempB != null">
                #{tempB},
            </if>
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user
        <set>
            <if test="name != null and name != ''">
                Name = #{name},
            </if>
            <if test="phone != null and phone != ''">
                Phone = #{phone},
            </if>
            <if test="password != null and password != ''">
                Password = #{password},
            </if>
            <if test="openId != null and openId != ''">
                Open_ID = #{openId},
            </if>
            <if test="dutyLevelId != null">
                Duty_Level_ID = #{dutyLevelId},
            </if>
            <if test="depId != null">
                Dep_ID = #{depId},
            </if>
            <if test="remark != null and remark != ''">
                Remark = #{remark},
            </if>
            <if test="status != null">
                Status = #{status},
            </if>
            <if test="note != null and note != ''">
                Note = #{note},
            </if>
            <if test="tempA != null and tempA != ''">
                temp_a = #{tempA},
            </if>
            <if test="tempB != null and tempB != ''">
                temp_b = #{tempB},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from user where ID = #{id}
    </delete>

</mapper>
