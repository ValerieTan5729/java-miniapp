<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.valerie.wx.miniapp.mapper.DutyMapper">

    <resultMap type="com.github.valerie.wx.miniapp.model.Duty" id="DutyMap">
        <result property="id" column="ID" jdbcType="BIGINT"/>
        <result property="name" column="Name" jdbcType="VARCHAR"/>
        <result property="beginDate" column="Begin_Date" jdbcType="TIMESTAMP"/>
        <result property="endDate" column="End_Date" jdbcType="TIMESTAMP"/>
        <result property="remark" column="Remark" jdbcType="VARCHAR"/>
        <result property="status" column="Status" jdbcType="INTEGER"/>
        <result property="note" column="Note" jdbcType="VARCHAR"/>
        <result property="tempA" column="temp_a" jdbcType="VARCHAR"/>
        <result property="tempB" column="temp_b" jdbcType="VARCHAR"/>
    </resultMap>
    
    <sql id="Base_Column_List" >
        ID, Name, Begin_Date, End_Date, Remark, Status, Note, temp_a, temp_b
    </sql>

    <!--查询单个-->
    <select id="selectById" resultMap="DutyMap">
        select
        <include refid="Base_Column_List" />
        from duty
        where ID = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="selectAllPaging" resultMap="DutyMap">
        select
        <include refid="Base_Column_List" />
        from duty
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="selectAll" resultMap="DutyMap">
        select
        <include refid="Base_Column_List" />
        from duty
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="name != null and name != ''">
                and Name = #{name}
            </if>
            <if test="beginDate != null">
                and Begin_Date = #{beginDate}
            </if>
            <if test="endDate != null">
                and End_Date = #{endDate}
            </if>
            <if test="remark != null and remark != ''">
                and Remark = #{remark}
            </if>
            <if test="status != null">
                and Status = #{status}
            </if>
            <if test="note != null and note != ''">
                and Note = #{note}
            </if>
            <if test="tempA != null and tempA != ''">
                and temp_a = #{tempA}
            </if>
            <if test="tempB != null and tempB != ''">
                and temp_b = #{tempB}
            </if>
        </where>
    </select>
    
    <!--通过Map作为筛选条件查询-->
    <select id="select" resultMap="DutyMap">
        select
        <include refid="Base_Column_List" />
        from duty
        <include refid="selectCondition" />
        <if test="sort != null and order != null">
            order by ${sort} ${order}
        </if>
        <if test="page != null and limit != null">
            limit #{page}, #{limit}
        </if>
    </select>

    <select id="count" resultType="java.lang.Long">
        select COUNT(*)
        from duty
        <include refid="selectCondition" />
    </select>

    <sql id="selectCondition">
        <where>
            <if test="id != null">
                and ID = #{id}
            </if>
            <if test="name != null and name != ''">
                and Name = #{name}
            </if>
            <if test="beginDate != null and beginDate != ''">
                and Begin_Date <![CDATA[>=]]> #{beginDate}
            </if>
            <if test="endDate != null and endDate != ''">
                and End_Date <![CDATA[<=]]> #{endDate}
            </if>
            <if test="remark != null and remark != ''">
                and Remark = #{remark}
            </if>
            <if test="status != null">
                and Status = #{status}
            </if>
            <if test="note != null and note != ''">
                and Note = #{note}
            </if>
            <if test="tempA != null and tempA != ''">
                and temp_a = #{tempA}
            </if>
            <if test="tempB != null and tempB != ''">
                and temp_b = #{tempB}
            </if>
        </where>
    </sql>

    <!--新增所有列-->
    <insert id="add" keyProperty="id" useGeneratedKeys="true">
        insert into duty        
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null">
                ID,
            </if>
            <if test="name != null">
                Name,
            </if>
            <if test="beginDate != null">
                Begin_Date,
            </if>
            <if test="endDate != null">
                End_Date,
            </if>
            <if test="remark != null">
                Remark,
            </if>
            <if test="status != null">
                Status,
            </if>
            <if test="note != null">
                Note,
            </if>
            <if test="tempA != null">
                temp_a,
            </if>
            <if test="tempB != null">
                temp_b,
            </if>
        </trim>
        values        
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="beginDate != null">
                #{beginDate},
            </if>
            <if test="endDate != null">
                #{endDate},
            </if>
            <if test="remark != null">
                #{remark},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="note != null">
                #{note},
            </if>
            <if test="tempA != null">
                #{tempA},
            </if>
            <if test="tempB != null">
                #{tempB},
            </if>
        </trim>
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update duty
        <set>
            <if test="name != null and name != ''">
                Name = #{name},
            </if>
            <if test="beginDate != null">
                Begin_Date = #{beginDate},
            </if>
            <if test="endDate != null">
                End_Date = #{endDate},
            </if>
            <if test="remark != null and remark != ''">
                Remark = #{remark},
            </if>
            <if test="status != null">
                Status = #{status},
            </if>
            <if test="note != null and note != ''">
                Note = #{note},
            </if>
            <if test="tempA != null and tempA != ''">
                temp_a = #{tempA},
            </if>
            <if test="tempB != null and tempB != ''">
                temp_b = #{tempB},
            </if>
        </set>
        where ID = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from duty where ID = #{id}
    </delete>

</mapper>
